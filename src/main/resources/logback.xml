<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender" scan="true" scanPeriod="5 seconds">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
